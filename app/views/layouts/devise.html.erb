<!DOCTYPE html>
<html lang="es">
  <head>
    <%= render "layouts/common_head", default_title: "Governo aberto" %>
    <%= render "layouts/meta_tags" %>
  </head>

  <body class="auth-page">
    <div class="wrapper">
      <div class="auth-image small-12 medium-5 column">
        <h1 class="logo margin">
          <%= link_to root_path do %>
            <%= image_tag(image_path_for('logo_header.png'), class: 'float-left', alt: t("layouts.header.logo")) %>
          <% end %>
        </h1>
      </div>

      <div class="small-12 medium-7 column">
        <div class="row">
          <div class="small-12 medium-8 large-9 small-centered column">
            <div class="auth-form margin">
              <%= render 'layouts/flash' %>

              <%= yield %>
            </div>
          </div>
        </div>
      </div>

      <div class="push"></div>
    </div>

    <div class="footer">
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
